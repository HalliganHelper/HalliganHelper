server {
    listen 80;
    server_name {{ subdomain }}.halliganhelper.com;

    location '/.well-known/acme-challenge' {
        root {{ letsencrypt_webroot_path }};
        index index.html index.htm index.nginx-debian.html;
        allow all;
    }

    location '/' {
        return 301 https://$server_name$request_uri;
    }
}
